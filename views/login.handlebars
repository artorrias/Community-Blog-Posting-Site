<div class="d-flex justify-content-between">
<div class="container d-flex flex-row border my-3 mx-1 card-background p-2">
    <form class="login-form">
        <h1 class="p-2">Login</h1>
        <div class="form-group">
            <label for="username-login">Username:</label>
            <input class="form-control" type="text" id="username-login"/>
        </div>

        <div class="form-group">
            <label for="password-login">Password:</label>
            <input class="form-control" type="password" id="password-login" />    
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit">Login</button>
        </div>
    </form>
</div>

<div class="container d-flex flex-row border my-3 mx-1 card-background p-2">
    <form class="signup-form">
        <h1 class="p-2">Signup</h1>
        <div class="form-group">
            <label for="username">Username:</label>
            <input class="form-control" type="text" id="username-create"/>
        </div>
        <div class="form-group">
            <label for="email-create">Email:</label>
            <input type="email" class="form-control" type="text" id="email-create"/>
        </div>

        <div class="form-group">
            <label for="password-create">Password:</label>
            <input type="password" class="form-control" id="password-create" />    
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Signup</button>
        </div>
    </form>
</div>
</div>

<script src="./js/login.js"></script>